{% extends 'base.html.twig' %}

{% block title %}Update{% endblock %}

{% block body %}
<div class="container mt-4">
{{ form_start(form) }}
<div class="row">
    <div class="mt-4 col-md-12">{{ form_row(form.title) }}</div>
</div>
<div class="row">
    <div class="mt-4 col-md-12">{{ form_row(form.description) }}</div>
</div>
{{ form_widget(form) }}
<button class="btn btn-primary" type="submit">Sauvegarder</button>
{{ form_end(form) }}


<a class="btn btn-warning center mt-4" href="{{ path('post.index') }}">Retour</a>
</div>
{% endblock %}